@{
    ViewData["Title"] = "Board";
}
<link href="~/css/board/board.css" rel="stylesheet" />
<script src="~/js/board/board.js"></script>

<div class="board-form-search">
    <div class="form-search d-flex justify-content-between">

        <div class="board-search d-flex justify-content-between align-items-center">
            <div class="position-relative">
                <i class="position-absolute fa-solid fa-magnifying-glass"></i>
                <input type="text" placeholder="Search board" id="input-search-board">
            </div>
            
            <div>
                <select id="select-project">
                    <option value="">Project</option>
                </select>

                <select id="select-filter">
                    <option value="value">Filter</option>
                </select>
            </div>
        </div>
    </div>
</div>

<div class="board">
    <div class="column" data-column="todo">
        <div class="column-header">
            To do (<span class="card-count">0</span>)
        </div>
        <div class="task-list">

            @for (int i = 1; i <= 3; i++)
            {
                <div class="task" data-id="@i">

                    <div class="d-flex justify-content-between align-items-center">
                        <div class="task-each-team">
                            @if (i == 1)
                            {
                                <span>Epic 1 - IT Team: CIM Program</span>
                            }
                            else if (i == 2)
                            {
                                <span>Epic 2 - Dev Team: Vision Program</span>
                            }
                            else
                            {
                                <span>Epic 3 - Smart Team</span>
                            }
                        </div>

                        <div class="piority">
                            @if (i == 1)
                            {
                                <i class="fa-solid fa-angles-up"></i>
                            }
                            else if (i % 2 == 0)
                            {
                                <i class="fa-solid fa-angle-up"></i>
                            }
                            else
                            {
                                <i class="fa-solid fa-equals"></i>
                            }
                        </div>
                    </div>

                    <span class="project-name d-inline-block">
                        Wisol Project
                    </span>
                    <br />
                    <span class="due-date d-inline-block">
                        <i class="fa-solid fa-calendar-days"></i> 10 OCT
                    </span>

                    <div class="d-flex justify-content-between align-items-center mt-1 pl-1">
                        <div class="wp">
                            <div class="form-check">
                                <input class="form-check-input" type="checkbox" value="" id="flexCheckChecked" checked>
                                <label class="form-check-label" for="flexCheckChecked">
                                    WP-6
                                </label>
                            </div>
                        </div>
                        <div class="user-doing">
                            <ul class="d-flex">
                                @if (i == 1)
                                {
                                    <li style="background: #767676;">Tin</li>
                                }
                                else if (i == 2)
                                {
                                    <li>Duy</li>
                                    <li style="background: violet;">Quy</li>
                                }
                                else
                                {
                                    <li style="background: red;">Trung</li>
                                }
                            </ul>
                        </div>
                    </div>

                </div>
            }
        </div>

        <button class="add-card">
            <span>+</span> Create issue
        </button>
    </div>

    <div class="column" data-column="in-progress">
        <div class="column-header bg-column-in-progress">
            In Progress (<span class="card-count">0</span>)
        </div>
        <div class="task-list">
           
        </div>
        <button class="add-card">
            <span>+</span> Create issue
        </button>
    </div>

    <div class="column" data-column="following">
        <div class="column-header bg-column-in-following">
            Following (<span class="card-count">0</span>)
        </div>
        <div class="task-list"></div>
        <button class="add-card">
            <span>+</span> Create issue
        </button>
    </div>

    <div class="column" data-column="done">
        <div class="column-header bg-column-done">
            Done (<span class="card-count">0</span>)
        </div>
        <div class="task-list"></div>
        <button class="add-card">
            <span>+</span> Create issue
        </button>
    </div>
</div>
<script>
      
</script>