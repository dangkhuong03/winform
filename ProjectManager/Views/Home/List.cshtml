<main class="project-list">
    <div class="filter-container">
        <!-- Textbox tìm kiếm -->
        <input type="text" class="search-boxs" placeholder="Search...">

        <!-- Dropdown Status -->
        <select id="lstatusDropdown" class="dropdown">
            <option value="">Select Status</option>
            <!-- Options sẽ được tải từ controller -->
        </select>

        <!-- Dropdown Client -->
        <select id="lclientDropdown" class="dropdown">
            <option value="">Select Client</option>
            <!-- Options sẽ được tải từ controller -->
        </select>

        <!-- Dropdown Assign -->
        <select id="lassignDropdown" class="dropdown">
            <option value="">Select Assign</option>
            <!-- Options sẽ được tải từ controller -->
        </select>

        <!-- Dropdown PIC -->
        <select id="lpicDropdown" class="dropdown">
            <option value="">Select PIC</option>
            <!-- Options sẽ được tải từ controller -->
        </select>

        <!-- Button Filter -->
        <button class="filter-button" onclick="applyFilter()">
            <img src="~/icon/filtericon.png" alt="Filter Icon"> Filter
        </button>
    </div>


    <div class="project-list-update">

        @{
            Html.RenderPartial("_ListPartialView", (ProjectManager.Models.ViewMode.ListViewModel)Model);
        }
    </div>



</main>

